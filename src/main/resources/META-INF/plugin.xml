<idea-plugin>
    <id>net.eventpanel.goToNestModule</id>
    <name>Go To NestJS Module</name>
    <version>1.0.2</version>
    <vendor email="dmitry.preobrazhenskiy@eventpanel.net" url="https://eventpanel.net">Dmitry Preobrazhenskiy</vendor>

    <depends>com.intellij.modules.platform</depends>

    <description>
        A lightweight plugin that lets you quickly jump to NestJS modules in a project
        by typing their name.
    </description>

    <actions>
        <action id="GoToNestModule"
                class="net.eventpanel.GoToNestModuleAction"
                text="Go To NestJS Module"
                description="Navigate to a NestJS module file">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>